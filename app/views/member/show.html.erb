<h1><%= @member.fullname %></h1>
<%= image_tag @member.headshot.url %><br>
<h3>
  Member of Parliament for <%= @member.electoral_district.name %> (<%= link_to @member.party.name, @member.party, id: "party", data: { party: @member.party.name } %>, <%= @member.electoral_district.province %>)
</h3>
<%= content_tag :div, id: "map", style: "height: 400px", data: { geo: @member.electoral_district.geo } do %>
<% end %>
<!-- <div id="map" style="height: 400px"></div> -->
<p>Email: <%= link_to @member.email, "mailto:#{@member.email}" %></p>
<h3>Bills sponsored</h3>
<% @member.bills.each do |bill| %>
  <h4><%= bill.bill_number %>: <%= bill.title_long ? bill.title_long : bill.title_short %></h4>
  <p>Introduced <%= bill.date_introduced.to_formatted_s(:long) %></p>
  <% if bill.summary %>
    <p><%= bill.summary %></p>
  <% end %>
<% end %>
<h3>Votes</h3>
<table>
  <tbody>
    <tr>
      <th>Name</th><th>Date</th><th>Position</th><th>Vote result</th>
    </tr>
    <% @member.votes.each do |vote| %>
    <tr>
      <th><%= vote.vote_tally.para.truncate(20) if vote.vote_tally.para %></th>
      <th><%= vote.vote_tally.date %></th>
      <th><%=  vote.vote_decision == true ? "Yea" : "Nay" %></th>
      <th><%= vote.vote_tally.agreed_to == true ? "Agreed To" : "Negatived" %></th>
    </tr>
    <% end %>
  </tbody>
</table>
